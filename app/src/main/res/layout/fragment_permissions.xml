<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="net.evendanan.chauffeur.sample.PermissionsFragment"
              android:orientation="vertical"
              android:background="?android:windowBackground">

    <Button
        android:id="@+id/fragment_ask_for_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Fragment asks for READ_CONTACTS"/>

    <Button
        android:id="@+id/fragment_ask_for_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Fragment asks for ACCESS_FINE_LOCATION"/>

    <Button
        android:id="@+id/fragment_ask_for_both"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Fragment asks for both"/>

    <Button
        android:id="@+id/fragment_ask_for_contacts_via_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Fragment asks for CONTACTS via Intent"/>

    <Button
        android:id="@+id/fragment_ask_for_contacts_via_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Fragment asks for CONTACTS via notification"/>

</LinearLayout>
