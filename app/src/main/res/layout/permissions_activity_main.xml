<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="net.evendanan.chauffeur.sample.PermissionsMainActivity">

    <Button
        android:id="@+id/activity_ask_for_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Activity asks for READ_CONTACTS"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF" />

    <FrameLayout
        android:id="@+id/fragments_content_layout"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF" />

    <Button
        android:id="@+id/navigate_to_app_permissions_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Go to App Permissions"/>
</LinearLayout>